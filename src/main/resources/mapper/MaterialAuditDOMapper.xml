    <select id="selectDownloadMaterial" parameterType="java.lang.Long"
            resultType="com.yunche.loan.domain.param.MaterialDownloadParam">

        SELECT

                    f.customer_id               AS customerId,
                    f.type                      AS type,
                    f.path                      AS path,
                    c.id_card                   AS idCard,
                    c.`name`                    AS name,
                    c.cust_type                 AS custType

        FROM
                    loan_order                  o,
                    loan_customer               c,
                    loan_file                   f

        LEFT JOIN   loan_info_supplement 		s  ON s.id = f.info_supplement_id

        WHERE

        (o.loan_customer_id = c.id  OR  o.loan_customer_id = c.principal_cust_id)

        AND f.customer_id = c.id

        <if test="customerId != null">
            AND f.customer_id = #{customerId}
        </if>

        AND o.id = #{orderId}

        AND f.type != 26

        /*资料流转已提交*/
        AND
            CASE
                WHEN f.upload_type = 1 THEN
                    TRUE
                WHEN f.upload_type = 2 THEN
                    s.status = 1
            ELSE
                    FALSE
        END

    </select>

